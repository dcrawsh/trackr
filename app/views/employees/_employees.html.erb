<table>
  <tr>
    <th>First Name:</th>
    <th>Last Name:</th>
    <th>Employee Number:</th>
  </tr>
 
  <% @employees.each do |employee| %>
    <tr>
      <td><%= employee.first_name %></td>
      <td><%= employee.last_name %></td>
      <td><%= employee.employee_number%></td>
      <td><%= employee.id%></td>
      
      <td><%= link_to 'Show', location_employee_path(@location, employee.id) %> </td> 
      <td><%= link_to 'Edit', edit_location_employee_path(@location, employee) %></td> 
      
    </tr>
  <% end %>
</table>